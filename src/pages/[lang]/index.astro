---
import "../../styles/global.css";
import TypeScriptIcon from "../../components/icons/TypeScriptIcon.astro";
import NodeJsIcon from "../../components/icons/NodeJsIcon.astro";
import GoIcon from "../../components/icons/GoIcon.astro";
import ReactIcon from "../../components/icons/ReactIcon.astro";
import PostgreSQLIcon from "../../components/icons/PostgreSQLIcon.astro";
import GraphQLIcon from "../../components/icons/GraphQLIcon.astro";
import KubernetesIcon from "../../components/icons/KubernetesIcon.astro";
import DockerIcon from "../../components/icons/DockerIcon.astro";
import AWSIcon from "../../components/icons/AWSIcon.astro";
import GitHubActionsIcon from "../../components/icons/GitHubActionsIcon.astro";
import TerraformIcon from "../../components/icons/TerraformIcon.astro";
import RedisIcon from "../../components/icons/RedisIcon.astro";
import LanguageToggle from "../../components/LanguageToggle.astro";
import { useTranslations, type Lang } from "../../i18n";

export function getStaticPaths() {
  return [{ params: { lang: "en" } }, { params: { lang: "it" } }];
}

const { lang } = Astro.params as { lang: Lang };
const t = useTranslations(lang);

const workExperience = [
  {
    start: "March 2025",
    end: lang === "it" ? "Oggi" : "Now",
    company: "Checkly",
    title: t.work.checkly.title,
    location: t.work.checkly.location,
    highlight: t.work.checkly.highlight,
    details: t.work.checkly.details,
  },
  {
    start: "April 2023",
    end: "March 2025",
    company: "Hygraph GmbH",
    title: t.work.hygraph.title,
    location: t.work.hygraph.location,
    highlight: t.work.hygraph.highlight,
    details: t.work.hygraph.details,
  },
  {
    start: "Sep 2020",
    end: "April 2023",
    company: "Contentful GmbH",
    title: t.work.contentful.title,
    location: t.work.contentful.location,
    highlight: t.work.contentful.highlight,
    details: t.work.contentful.details,
  },
  {
    start: "May 2018",
    end: "Aug 2020",
    company: "SAP Labs France",
    title: t.work.sap.title,
    location: t.work.sap.location,
    highlight: t.work.sap.highlight,
    details: t.work.sap.details,
  },
];

const education = [
  {
    year: "2017",
    degree: t.education.ms.degree,
    school: t.education.ms.school,
    mark: "110/110",
  },
  {
    year: "2014",
    degree: t.education.be.degree,
    school: t.education.be.school,
    mark: "",
  },
];

const services = [
  {
    title: t.services.backend.title,
    description: t.services.backend.description,
    icon: `<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-8 h-8"><path stroke-linecap="round" stroke-linejoin="round" d="M5.25 14.25h13.5m-13.5 0a3 3 0 01-3-3m3 3a3 3 0 100 6h13.5a3 3 0 100-6m-16.5-3a3 3 0 013-3h13.5a3 3 0 013 3m-19.5 0a4.5 4.5 0 01.9-2.7L5.737 5.1a3.375 3.375 0 012.7-1.35h7.126c1.062 0 2.062.5 2.7 1.35l2.587 3.45a4.5 4.5 0 01.9 2.7m0 0a3 3 0 01-3 3m0 3h.008v.008h-.008v-.008zm0-6h.008v.008h-.008v-.008zm-3 6h.008v.008h-.008v-.008zm0-6h.008v.008h-.008v-.008z" /></svg>`,
  },
  {
    title: t.services.fullstack.title,
    description: t.services.fullstack.description,
    icon: `<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-8 h-8"><path stroke-linecap="round" stroke-linejoin="round" d="M17.25 6.75L22.5 12l-5.25 5.25m-10.5 0L1.5 12l5.25-5.25m7.5-3l-4.5 16.5" /></svg>`,
  },
  {
    title: t.services.devops.title,
    description: t.services.devops.description,
    icon: `<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-8 h-8"><path stroke-linecap="round" stroke-linejoin="round" d="M16.023 9.348h4.992v-.001M2.985 19.644v-4.992m0 0h4.992m-4.993 0l3.181 3.183a8.25 8.25 0 0013.803-3.7M4.031 9.865a8.25 8.25 0 0113.803-3.7l3.181 3.182m0-4.991v4.99" /></svg>`,
  },
  {
    title: t.services.consulting.title,
    description: t.services.consulting.description,
    icon: `<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-8 h-8"><path stroke-linecap="round" stroke-linejoin="round" d="M20.25 8.511c.884.284 1.5 1.128 1.5 2.097v4.286c0 1.136-.847 2.1-1.98 2.193-.34.027-.68.052-1.02.072v3.091l-3-3c-1.354 0-2.694-.055-4.02-.163a2.115 2.115 0 01-.825-.242m9.345-8.334a2.126 2.126 0 00-.476-.095 48.64 48.64 0 00-8.048 0c-1.131.094-1.976 1.057-1.976 2.192v4.286c0 .837.46 1.58 1.155 1.951m9.345-8.334V6.637c0-1.621-1.152-3.026-2.76-3.235A48.455 48.455 0 0011.25 3c-2.115 0-4.198.137-6.24.402-1.608.209-2.76 1.614-2.76 3.235v6.226c0 1.621 1.152 3.026 2.76 3.235.577.075 1.157.14 1.74.194V21l4.155-4.155" /></svg>`,
  },
];

const skills = [
  { name: "TypeScript", Icon: TypeScriptIcon },
  { name: "Node.js", Icon: NodeJsIcon },
  { name: "Go", Icon: GoIcon },
  { name: "React", Icon: ReactIcon },
  { name: "PostgreSQL", Icon: PostgreSQLIcon },
  { name: "GraphQL", Icon: GraphQLIcon },
  { name: "Kubernetes", Icon: KubernetesIcon },
  { name: "Docker", Icon: DockerIcon },
  { name: "AWS", Icon: AWSIcon },
  { name: "GitHub Actions", Icon: GitHubActionsIcon },
  { name: "Terraform", Icon: TerraformIcon },
  { name: "Redis", Icon: RedisIcon },
];

const basePath = `/${lang}`;
---

<html lang={lang} data-theme="dim">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={t.meta.description} />
    <title>{t.meta.title}</title>
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <link rel="alternate" hreflang="en" href="/en/" />
    <link rel="alternate" hreflang="it" href="/it/" />
    <link rel="alternate" hreflang="x-default" href="/en/" />
  </head>
  <body class="min-h-screen">
    <!-- Navbar -->
    <nav
      class="navbar bg-base-200/80 backdrop-blur-sm fixed top-0 z-50 border-b border-base-300"
    >
      <div class="navbar-start">
        <a href={basePath} class="btn btn-ghost text-xl font-bold text-white">
          <img src="/logo.webp" class="w-8" />
          Bikappa
        </a>
      </div>
      <div class="navbar-center hidden lg:flex">
        <ul class="menu menu-horizontal px-1 gap-2">
          <li>
            <a href="#services" class="hover:text-primary">{t.nav.services}</a>
          </li>
          <li><a href="#about" class="hover:text-primary">{t.nav.about}</a></li>
          <li>
            <a href="#skills" class="hover:text-primary">{t.nav.skills}</a>
          </li>
          <li>
            <a href="#contact" class="hover:text-primary">{t.nav.contact}</a>
          </li>
        </ul>
      </div>
      <div class="navbar-end gap-2">
        <LanguageToggle lang={lang} />
        <a
          href="https://github.com/Bikappa"
          target="_blank"
          rel="noopener noreferrer"
          class="btn btn-ghost btn-sm btn-square"
          aria-label="Github Profile"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            fill="currentColor"
            viewBox="0 0 24 24"
            class="w-5 h-5"
          >
            <path
              d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"
            ></path>
          </svg>
        </a>
        <a href="#contact" class="btn btn-primary btn-sm">{t.nav.getInTouch}</a>
      </div>
    </nav>

    <main>
      <!-- Hero Section -->
      <section
        class="hero min-h-screen pt-16 bg-gradient-to-br from-emerald-600 via-teal-800 to-teal-800"
      >
        <div class="hero-content text-center">
          <div class="max-w-3xl">
            <p class="text-primary font-mono mb-4">{t.hero.greeting}</p>
            <h1 class="text-5xl md:text-7xl font-bold mb-4">{t.hero.name}</h1>
            <p class="text-2xl md:text-3xl text-base-content/70 mb-6">
              {t.hero.aka}
              <span class="text-primary font-semibold">Bikappa</span>
            </p>
            <p
              class="text-xl md:text-2xl text-base-content/80 mb-8 max-w-2xl mx-auto"
            >
              {t.hero.tagline}
            </p>
            <div class="flex flex-wrap gap-4 justify-center">
              <a href="#services" class="btn btn-primary btn-lg"
                >{t.hero.viewServices}</a
              >
              <a href="#contact" class="btn btn-outline btn-lg"
                >{t.hero.letsTalk}</a
              >
            </div>
          </div>
        </div>
      </section>

      <!-- Services Section -->
      <section id="services" class="py-24 bg-base-200">
        <div class="container mx-auto px-6">
          <div class="text-center mb-16">
            <h2 class="text-4xl font-bold mb-4">{t.services.title}</h2>
            <p class="text-base-content/70 text-lg max-w-2xl mx-auto">
              {t.services.subtitle}
            </p>
          </div>
          <div class="grid md:grid-cols-2 gap-8 max-w-5xl mx-auto">
            {
              services.map((service) => (
                <div class="card bg-base-100 shadow-xl hover:shadow-2xl transition-shadow border border-base-300">
                  <div class="card-body">
                    <div class="text-primary mb-4" set:html={service.icon} />
                    <h3 class="card-title text-2xl">{service.title}</h3>
                    <p class="text-base-content/70">{service.description}</p>
                  </div>
                </div>
              ))
            }
          </div>
        </div>
      </section>

      <!-- About Section -->
      <section id="about" class="py-24 bg-base-100">
        <div class="container mx-auto px-6">
          <div class="max-w-4xl mx-auto">
            <h2 class="text-4xl font-bold mb-12 text-center">
              {t.about.title}
            </h2>

            <!-- Personal intro -->
            <div class="prose prose-lg max-w-none mb-16 text-base-content/80">
              <p class="text-xl leading-relaxed">
                {t.about.intro.part1}
                <span class="text-primary font-semibold"
                  >{t.about.intro.faster}</span
                >,
                <span class="text-primary font-semibold"
                  >{t.about.intro.cheaper}</span
                >, {lang === "it" ? "e" : "and"}
                <span class="text-primary font-semibold"
                  >{t.about.intro.reliable}</span
                >{t.about.intro.part2}
              </p>
              <p class="text-lg leading-relaxed mt-4">
                {t.about.hobbies}
              </p>
            </div>

            <!-- Education badges -->
            <div class="flex flex-wrap gap-4 justify-center mb-16">
              {
                education.map((edu) => (
                  <div class="badge h-auto text-sm sm:text-base badge-lg gap-2 py-4 px-5">
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      fill="none"
                      viewBox="0 0 24 24"
                      stroke-width="1.5"
                      stroke="currentColor"
                      class="w-5 h-5 text-primary"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        d="M4.26 10.147a60.436 60.436 0 00-.491 6.347A48.627 48.627 0 0112 20.904a48.627 48.627 0 018.232-4.41 60.46 60.46 0 00-.491-6.347m-15.482 0a50.57 50.57 0 00-2.658-.813A59.905 59.905 0 0112 3.493a59.902 59.902 0 0110.399 5.84c-.896.248-1.783.52-2.658.814m-15.482 0A50.697 50.697 0 0112 13.489a50.702 50.702 0 017.74-3.342M6.75 15a.75.75 0 100-1.5.75.75 0 000 1.5zm0 0v-3.675A55.378 55.378 0 0112 8.443m-7.007 11.55A5.981 5.981 0 006.75 15.75v-1.5"
                      />
                    </svg>
                    <span>{edu.degree}</span>
                    <span class="text-base-content/50">|</span>
                    <span class="text-base-content/70">{edu.school}</span>
                    {edu.mark && (
                      <span class="text-primary font-semibold">{edu.mark}</span>
                    )}
                  </div>
                ))
              }
            </div>

            <!-- Work history -->
            <h3 class="text-2xl font-bold mb-8 text-center">
              {t.about.workHistory}
            </h3>
            <div class="relative" id="work-history-container">
              <!-- Faded preview (visible when collapsed) -->
              <div id="work-preview" class="relative max-h-64 overflow-hidden">
                <div class="space-y-4">
                  {
                    workExperience.slice(0, 2).map((job) => (
                      <div class="bg-base-200 border border-base-300 rounded-xl p-6">
                        <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-2">
                          <div>
                            <h4 class="text-xl font-bold">{job.company}</h4>
                            <p class="text-base-content/70">{job.title}</p>
                          </div>
                          <div class="flex flex-wrap items-center gap-2">
                            <span class="badge badge-primary badge-sm">
                              {job.start} - {job.end}
                            </span>
                            <span class="badge badge-outline badge-sm">
                              {job.location}
                            </span>
                          </div>
                        </div>
                        <p class="text-primary mt-2 font-medium">
                          {job.highlight}
                        </p>
                      </div>
                    ))
                  }
                </div>
                <!-- Fade overlay -->
                <div
                  class="absolute inset-0 bg-gradient-to-t from-base-100 via-base-100/80 to-transparent pointer-events-none"
                >
                </div>
              </div>

              <!-- Full content (hidden until expanded) -->
              <div id="work-full" class="hidden space-y-4">
                {
                  workExperience.map((job) => (
                    <div class="bg-base-200 border border-base-300 rounded-xl p-6">
                      <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-2">
                        <div>
                          <h4 class="text-xl font-bold">{job.company}</h4>
                          <p class="text-base-content/70">{job.title}</p>
                        </div>
                        <div class="flex flex-wrap items-center gap-2">
                          <span class="badge badge-primary badge-sm">
                            {job.start} - {job.end}
                          </span>
                          <span class="badge badge-outline badge-sm">
                            {job.location}
                          </span>
                        </div>
                      </div>
                      <p class="text-primary mt-2 font-medium">
                        {job.highlight}
                      </p>
                      <ul class="mt-4 space-y-2">
                        {job.details.map((detail) => (
                          <li class="flex gap-2 text-base-content/80">
                            <span class="text-primary mt-1">
                              <svg
                                xmlns="http://www.w3.org/2000/svg"
                                viewBox="0 0 20 20"
                                fill="currentColor"
                                class="w-4 h-4"
                              >
                                <path
                                  fill-rule="evenodd"
                                  d="M7.21 14.77a.75.75 0 01.02-1.06L11.168 10 7.23 6.29a.75.75 0 111.04-1.08l4.5 4.25a.75.75 0 010 1.08l-4.5 4.25a.75.75 0 01-1.06-.02z"
                                  clip-rule="evenodd"
                                />
                              </svg>
                            </span>
                            <span>{detail}</span>
                          </li>
                        ))}
                      </ul>
                    </div>
                  ))
                }
              </div>

              <!-- Expand button -->
              <div class="text-center mt-6">
                <button
                  id="expand-work-btn"
                  class="btn btn-outline btn-primary gap-2"
                  data-show-more={t.about.showMore}
                  data-show-less={t.about.showLess}
                >
                  <span id="expand-text">{t.about.showMore}</span>
                  <svg
                    id="expand-icon"
                    xmlns="http://www.w3.org/2000/svg"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke-width="2"
                    stroke="currentColor"
                    class="w-4 h-4 transition-transform"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      d="M19.5 8.25l-7.5 7.5-7.5-7.5"></path>
                  </svg>
                </button>
              </div>
            </div>

            <script>
              const expandBtn = document.getElementById("expand-work-btn");
              const preview = document.getElementById("work-preview");
              const full = document.getElementById("work-full");
              const expandText = document.getElementById("expand-text");
              const expandIcon = document.getElementById("expand-icon");
              let expanded = false;

              const showMoreText =
                expandBtn?.dataset.showMore || "Show Full Experience";
              const showLessText = expandBtn?.dataset.showLess || "Show Less";

              expandBtn?.addEventListener("click", () => {
                expanded = !expanded;
                if (expanded) {
                  preview?.classList.add("hidden");
                  full?.classList.remove("hidden");
                  if (expandText) expandText.textContent = showLessText;
                  expandIcon?.classList.add("rotate-180");
                } else {
                  preview?.classList.remove("hidden");
                  full?.classList.add("hidden");
                  if (expandText) expandText.textContent = showMoreText;
                  expandIcon?.classList.remove("rotate-180");
                }
              });
            </script>
          </div>
        </div>
      </section>

      <!-- Skills Section -->
      <section id="skills" class="py-24 bg-base-200">
        <div class="container mx-auto overflow-hidden">
          <div class="text-center mb-16">
            <h2 class="text-4xl font-bold mb-4">{t.skills.title}</h2>
            <p class="text-base-content/70 text-lg max-w-2xl mx-auto">
              {t.skills.subtitle}
            </p>
          </div>

          <!-- Infinite scrolling carousel -->
          <div class="relative w-full">
            <!-- Fade edges -->
            <div
              class="absolute left-0 top-0 bottom-0 w-20 bg-gradient-to-r from-base-200 to-transparent z-10 pointer-events-none"
            >
            </div>
            <div
              class="absolute right-0 top-0 bottom-0 w-20 bg-gradient-to-l from-base-200 to-transparent z-10 pointer-events-none"
            >
            </div>

            <div class="carousel-track flex gap-8 animate-scroll">
              {
                [...skills, ...skills].map((skill) => (
                  <div class="flex-shrink-0 flex flex-col items-center gap-3 p-6 bg-base-100 rounded-xl border border-base-300 min-w-[140px] hover:border-primary transition-colors">
                    <skill.Icon size={48} />
                    <span class="text-sm font-medium text-base-content/80">
                      {skill.name}
                    </span>
                  </div>
                ))
              }
            </div>
          </div>
        </div>

        <style>
          @keyframes scroll {
            0% {
              transform: translateX(0);
            }
            100% {
              transform: translateX(-50%);
            }
          }

          .animate-scroll {
            animation: scroll 30s linear infinite;
          }

          .animate-scroll:hover {
            animation-play-state: paused;
          }
        </style>
      </section>

      <!-- Contact Section -->
      <section id="contact" class="py-24 bg-base-100">
        <div class="container mx-auto px-6">
          <div class="text-center mb-16">
            <h2 class="text-4xl font-bold mb-4">{t.contact.title}</h2>
            <p class="text-base-content/70 text-lg max-w-2xl mx-auto">
              {t.contact.subtitle}
            </p>
          </div>
          <div class="flex flex-col sm:flex-row justify-center gap-6">
            <a
              href="mailto:luca@bikappa.com"
              class="btn btn-primary btn-lg gap-2"
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                fill="none"
                viewBox="0 0 24 24"
                stroke-width="1.5"
                stroke="currentColor"
                class="w-6 h-6"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M21.75 6.75v10.5a2.25 2.25 0 01-2.25 2.25h-15a2.25 2.25 0 01-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0019.5 4.5h-15a2.25 2.25 0 00-2.25 2.25m19.5 0v.243a2.25 2.25 0 01-1.07 1.916l-7.5 4.615a2.25 2.25 0 01-2.36 0L3.32 8.91a2.25 2.25 0 01-1.07-1.916V6.75"
                ></path>
              </svg>
              {t.contact.emailMe}
            </a>
            <a
              href="https://linkedin.com/in/lucabianconi"
              target="_blank"
              rel="noopener noreferrer"
              class="btn btn-outline btn-lg gap-2"
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                fill="currentColor"
                viewBox="0 0 24 24"
                class="w-6 h-6"
              >
